@model TechStore.ViewModels.CreateCustomerView
@{
    ViewBag.Title = "New customer";
}

<form asp-action="Create" asp-controller="Customer">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row py-2 justify-content-center">
        <div class="form-group col-lg-7">
            <div class="form-group row">
                <div class="col">
                    <span asp-validation-for="FirstName"></span>
                    <input asp-for="FirstName" class="form-control" placeholder="First Name">
                </div>
                <div class="col">
                    <span asp-validation-for="SecondName"></span>
                    <input asp-for="SecondName" class="form-control" placeholder="Last Name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <span asp-validation-for="Phone"></span>
                    <input asp-for="Phone" class="form-control" placeholder="Phone" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <span asp-validation-for="Email"></span>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <span asp-validation-for="Password"></span>
                    <input asp-for="Password" class="form-control" placeholder="Password">
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-success" value="Add">Add</button>
                </div>
            </div>
        </div>
    </div>
</form>