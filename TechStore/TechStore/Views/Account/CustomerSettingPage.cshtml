@using Microsoft.AspNetCore.Identity
@model TechStore.ViewModels.EditCustomerView
@{
    ViewData["Title"] = "CustomerSettingPage";
}

<div class="row justify-content-center">
    <div class="col col-lg-5 my-3">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col text-center">
                        <h2>Profile</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">

                <form asp-action="CustomerSettingPage" asp-controller="Account">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">FirstName</label>
                        <input type="text" asp-for="FirstName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="SecondName" class="control-label">SecondName</label>
                        <input type="text" asp-for="SecondName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Phone</label>
                        <input type="text" asp-for="Phone" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <a asp-action="ForgotPassword" asp-controller="Account">Change password</a>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-dark" style="margin: 2% 35%; width: 30%;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>