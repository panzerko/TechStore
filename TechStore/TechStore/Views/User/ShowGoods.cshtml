@model IEnumerable<TechStore.DAL.Models.Good>
@{
    ViewBag.Title = "Good list";
}

<div class="input-group row mt-2">
    <div class=" col">
        <h2 class="">Goods in @ViewBag.OrderId order : </h2>
    </div>
    <div class="col">
        <span class="input-group-btn">
            <a class="btn btn-sm btn-primary" asp-controller="User" asp-action="Index" style="float: right;">Back</a>
        </span>
    </div>
</div>

    <table class="table table-hover">
        <tr>
            <th>Name</th>
            <th>Year of goods production</th>
            <th>The warranty period</th>
            <th>Producer name</th>
            <th>Price</th>
            <th>Type</th>
        </tr>
        @foreach (var good in Model)
        {
            <tr>
                <td>@good.Name</td>
                <td>@good.YearOfManufacture</td>
                <td>@good.WarrantyTerm months</td>
                <td>@good.Producer.Name</td>
                <td>@good.Price</td>
                <td>@good.Type</td>
            </tr>
        }
    </table>
